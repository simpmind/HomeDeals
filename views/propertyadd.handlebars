<nav class="navbar navbar-expand-lg navbar-dark">
	<a class="navbar-brand" id="nav-logo-container" href="/"><img src="/images/2.png"></a>
</nav>

<section class="container white-bg-container">
	<div class="row justify-content-md-center">
		<div class="col-12 page-banner">
			<h1>Create new property for owner {{owner.firstName}} {{owner.lastName}} (ID# <span id="idtag"
					data-tag="{{owner.id}}">{{owner.id}}</span>)</h1>
		</div>
	</div>

	<div class="card client-card">
		<div class="card-body">
			<div class="row">
				<div class="col-6">
					<p class="card-text"><b>Price: </b><input class="form-control mr-sm-2" type="text"
							id="propInputPrice_string" value="{{property.price}}"></p>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-12">
					<p class="card-text"><b>Property Description: </b><textarea class="form-control" rows="5"
							id="propInputInfo">{{property.overview}}</textarea></p>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-12">
					<p class="card-text"><b>URL to Photo: </b><input class="form-control mr-sm-2" type="text"
							id="propInputPhoto" value="{{property.photo}}"></p>
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-6">
					<p class="card-text"><b>Address: </b><input class="form-control mr-sm-2" type="text"
							id="propInputAddress" value="{{property.address}}"></p>
					<p class="card-text"><b>City: </b><input class="form-control mr-sm-2" type="text" id="propInputCity"
							value="{{property.city}}"></p>
					<p class="card-text"><b>zip Code: </b><input class="form-control mr-sm-2" type="text"
							id="propInputPostalCode" value="{{property.zipCode}}"></p>
					<p class="card-text"><b>Proper Type: </b><input class="form-control mr-sm-2" type="text"
							id="propInputProperType" value="{{property.type}}"></p>
				</div>
				<div class="col-6">
					<p class="card-text"><b>Bedrooms: </b><input class="form-control mr-sm-2" type="text"
							id="propInputBedrooms" value="{{property.bedrooms}}"></p>
					<p class="card-text"><b>Bathrooms: </b><input class="form-control mr-sm-2" type="text"
							id="propInputBathrooms" value="{{property.bathrooms}}"></p>
				</div>
			</div>
		</div>
	</div>
	<div class="client-buttons">
		<button class="btn btn-success my-2 my-sm-0" type="button" id="addProperty">ADD PROPERTY</button>
	</div>

</section>